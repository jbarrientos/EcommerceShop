@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

    <h1>Products</h1>
    <div class="row">
        @foreach (var item in Model)
        {
        <div class="col-md-4">
            <div class="card mb-3" style="max-width: 540px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/Content/ProductImages/@item.Image" class="card-img" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <hr />
                            <br />
                            <br />
                            <br />
                            <br />

                            <a href="@Url.Action("Details", "ProductManager",new {  Id = item.Id })" class="btn btn-info btn-block">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            
        }
    </div>